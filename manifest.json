{
  "manifest_version": 3,
  "name": "No Shorts No Distraction YT",
  "version": "0.0.9",
  "description": "youtube No short, no distraction",
  "permissions": [
    "storage",
    "activeTab",
    "webNavigation"
  ],
  "host_permissions": [
    "https://*.youtube.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://*.youtube.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "128": "icons/icon128.png"
  }
} 